{{!
@template mod_motbot/user_view

HTML message for insights with one single prediction

Classes required for JS:
* none

Data attributes required for JS:
* none

Example context (json):
{
"settings_url": "http://localhost/mod/motbot/course_settings.php?id=2567",
"models": [
{
"name" : "Attendance",
"enabled": true,
"count": 11
"helpful" : 5,
"unhelpful" : 3,
"last_intervention": "2. April 2020 19:45",
"image": "happy_motbot",
},
]
"interventions_table": "some html",
}
}}

{{> mod_motbot/styles}}

<div class="mod_motbot_user_view">
  {{#settings_url}}
  <div class="float-right">
    <a class="btn btn-primary" href="{{{.}}}">Edit settings</a>
  </div>
  {{/settings_url}}

  <div class="overview">
    <h2>Quick Overview</h2>
    <div class="row">
      {{#models}}
      <div class="column">
        {{#pix}} {{{image}}}, motbot, {{{image}}} motbot {{/pix}}
        <h5>{{{name}}}</h5>

        {{#count}}
        <br />
        <table class="generaltable">
          <thead>
            <tr>
              <th class="header c0">Helpful</th>
              <th class="header c1">Unhelpful</th>
              <th class="header c2">Total</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="cell c0">{{{helpful}}}</td>
              <td class="cell c1">{{{unhelpful}}}</td>
              <td class="cell c2">
                <strong>{{{count}}}</strong>
              </td>
            </tr>
          </tbody>
          <tfoot>
            <!-- <td class="footer">Total interventions</td>
          <td class="footer">
            <strong>{{{count}}}</strong>
          </td> -->
          </tfoot>
        </table>

        <br />
        <p>Last intervention on:</p>
        <p>{{{last_intervention}}}</p>
        {{/count}}
        {{^count}}
        <p>No Interventions yet.</p>
        {{/count}}
        {{^enabled}}
        <p>Model paused by course manager</p>
        {{/enabled}}
        {{#intervention_url}}
        <a class="btn btn-primary" href="{{{.}}}">Show intervention</a>
        {{/intervention_url}}
      </div>
      {{/models}}
    </div>
  </div>
</div>