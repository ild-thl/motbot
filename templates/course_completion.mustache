{{!
    @template mod_motbot/course_completion

    HTML message for insights with one single prediction

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "title": "Please visit the course!",
        "user_progress": "Please visit the course!",
        "avg_progress": "Please visit the course!",
        "desc": "Please visit the course!",
    }
}}

<div class="suggestion">
  <h5>{{ title }}</h5>
  <br />
  <div class="progress-meter">
    <span class="legend">0%</span>
    <div
      class="progress-stat progress-stat-user"
      style="width:{{ user_progress }}%; z-index: {{ user_prog_less_or_equal }}"
    >
      <div>
        <p class="progress-value">{{ user_progress }}%</p>
        <p>Your Progress</p>
      </div>
    </div>
    <div
      class="progress-stat progress-stat-avg"
      style="width:{{ avg_progress }}%"
    >
      <div>
        <p>Average Progress</p>
        <p class="progress-value">{{ avg_progress }}%</p>
      </div>
    </div>
    <span class="legend">100%</span>
  </div>
  <div class="motbot-comment">
    <div class="image-container">
      {{#pix}} happy_motbot, motbot, happy_motbot motbot {{/pix}}
    </div>
    <p>{{ desc }}</p>
  </div>
</div>
