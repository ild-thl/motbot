@template mod_motbot/user_view

HTML message for insights with one single prediction

Classes required for JS:
* none

Data attributes required for JS:
* none

Example context (json):
{
"settings_url": "http://localhost/mod/motbot/course_settings.php?id=2567",
"models": [
{
"name" : "Attendance",
"enabled": true,
"hasdata": true
"state" : "Successful",
"image": "happy_motbot",
"date": "2. April 2020 19:45",
},
]
"interventions_table": "some html",
}
}}

{{> mod_motbot/styles}}

<div class="mod_motbot_user_view">
  {{#settings_url}}
  <div class="float-right">
    <a class="btn btn-primary" href="{{{.}}}">Edit settings</a>
  </div>
  {{/settings_url}}

  <div class="overview">
    <h2>Quick Overview</h2>
    <div class="row">
      {{#models}}
      <div class="column">
        {{#pix}} {{{image}}}, motbot, {{{image}}} motbot {{/pix}}
        <h5>{{{name}}}</h5>
        {{#date}}
        <p>Last update on:</p>
        <p>{{{date}}}</p>
        {{/date}}
        <p>
          {{#enabled}}
          {{#hasdata}}
          {{{state}}}
          {{/hasdata}}
          {{^hasdata}}
          All good
          {{/hasdata}}
          {{/enabled}}
          {{^enabled}}
          Model paused by course manager
          {{/enabled}}
        </p>
        {{#intervention_url}}
        <a class="btn btn-primary" href="{{{.}}}">Show intervention</a>
        {{/intervention_url}}
      </div>
      {{/models}}
    </div>
  </div>

  {{#interventions_table}}
  <div>
    <h2>Interventions</h2>
    {{{.}}}
  </div>
  {{/interventions_table}}
</div>